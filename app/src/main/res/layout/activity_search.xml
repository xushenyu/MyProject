<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/tv_home_cancle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="#000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_home_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_home_cancle"
            android:background="@drawable/edit_background"
            android:drawableLeft="@mipmap/sousuo"
            android:drawablePadding="7dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:hint="输入关键字"
            android:imeOptions="actionSearch"
            android:padding="3dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#ff9797a1"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#ff9797a1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:background="#ff9797a1"
                android:layout_marginBottom="12dp"
                android:text="热门搜索"
                android:textColor="#000"
                android:textSize="12sp" />

            <GridView
                android:id="@+id/lv_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:numColumns="2"
                android:listSelector="#00000000" />
            <TextView
                android:id="@+id/tv_history"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:background="#ff9797a1"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:text="最近搜索"
                android:textColor="#000"
                android:textSize="12sp" />

            <ListView
                android:id="@+id/lv_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:listSelector="#00000000" />
            <TextView
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="清除记录"
                android:gravity="center"
                android:textColor="#ff9797a1"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lv_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:listSelector="@null"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>